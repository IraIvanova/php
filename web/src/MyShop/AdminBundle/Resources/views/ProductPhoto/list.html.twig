{% extends "@MyShopAdmin/layout.html.twig" %}

{% block body %}
    <h3>Фотографии товара {{ product.model }}</h3>

    <a href="{{ path("my_shop_admin.product_photo_add", {idProduct:product.id}) }}">Добавить фото</a>
    <table>
    {% for photo in product.getPhotos() %}
        <tr>
            <td>{{ photo.getTitle() }}</td>
            <td>
                <img src="/photos/{{ photo.getFileName() }}" />
            </td>
<td>
    <a href="{{ path("my_shop_admin.product_photo_edit", {id:photo.id}) }}">Редактирование</a><br />
    <a href="{{ path("my_shop_admin.product_photo_delete", {id:photo.id} ) }}">Удалить</a><br />
    <a href="{{ path("my_shop_admin.sendmail", {id:photo.id} ) }}">Send Email</a>
</td>
        </tr>

    {% endfor %}
    </table>
{% endblock %}

