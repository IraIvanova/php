{% extends "@MyShopAdmin/layout.html.twig" %}

{% block body %}
<a href="{{ path("my_shop_admin.page_add") }}">Добавить</a>
    <table>
        <tr>
              <td>Уникальный ключ</td>
              <td>Заголовок</td>
              <td>Дата</td>
        </tr>
      {% for page in pageList %}
        <tr>
               <td>{{ page.pageKey }}</td>
               <td>{{ page.title }}</td>
               <td>{{ page.dateCreatedAt.format("H:i:s d.m.Y")}}</td>
               <td>{{ page.hidden }}
               <input type="checkbox" value="true" name="hidden">
               </td>
               <td>
               <a href="{{ path("my_shop_admin.page_edit", {id:page.id}) }}">Редактировать</a>
                <a href="{{ path("my_shop_admin.page_delete", {id:page.id}) }}">Удалить</a>
               </td>
        </tr>

      {% endfor %}

     </table>
{% endblock %}