{% extends "@MyShopAdmin/layout.html.twig" %}

{% block body %}
    <h3>Фотографии товара {{ news.title }}</h3>

    <a href="{{ path("my_shop_admin.news_photo_add", {idNews:news.id}) }}">Добавить фото</a>
    <table>
    {% for photo in news.getPhotos() %}
        <tr>
            <td>{{ photo.getTitle() }}</td>
            <td>
                <a href="/photos/{{ photo.getFileName() }}">
                    <img src="/photos/{{ photo.getSmallFileName() }}" />
                </a>
            </td>
            <td>
                <a href="{{ path("my_shop_admin.news_photo_edit", {idNews:photo.id}) }}">Редактирование</a>
                <a href="{{ path("my_shop_admin.news_photo_delete", {id:photo.id} ) }}">Удалить</a>
            </td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}