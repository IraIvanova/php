{% extends "@MyShopDefault/layout.html.twig" %}

{% block body %}
<div id="content" class="float_r">
    <h1> Products</h1>
    {% for product in productList %}


        <div class="product_box">
            <h1>{{ product.getModel() }}</h1>
            <a href="{{ path("my_shop.product_info",{id:product.getId()}) }}"> <img src="/photos/small_143192321.jpg" /></a>

            <p> {{ product.getDescription() }}</p>
            <p class="product_price">{{ product.getPrice() }}</p>
            <a href="#" class="addtocart"></a>
            <a href="{{ path("my_shop.product_info",{id:product.getId()}) }}" class="detail"></a>
        </div>
    {% else %}
        No products!
    {% endfor %}

</div>
{% endblock %}

